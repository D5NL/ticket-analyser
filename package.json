{
  "name": "service-ticket-analyzer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "dev": "vite",
    "dev:server": "nodemon --exec tsx src/server/index.ts",
    "start:dev": "concurrently \"npm run dev\" \"npm run dev:server\"",
    "build": "tsc --project tsconfig.build.json && vite build",
    "preview": "vite preview",
    "type-check": "tsc --project tsconfig.json --noEmit",
    "build:server": "tsc --project tsconfig.build.json",
    "start": "node dist/server/index.js",
    "start:server": "tsx src/server/index.ts",
    "deploy:frontend": "vite build",
    "build:render": "npm install && echo \"Skipping TypeScript compilation...\" && mkdir -p dist && cp -r src/server dist/ && vite build"
  },
  "dependencies": {
    "@tremor/react": "^3.12.0",
    "@types/multer": "^1.4.12",
    "chart.js": "^4.4.8",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "mongoose": "^8.12.1",
    "multer": "^1.4.5-lts.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.17.23",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/xlsx": "^0.0.36",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vite": "^4.4.5"
  }
}
